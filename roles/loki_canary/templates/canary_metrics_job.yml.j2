- job_name: 'loki-canary'
  scrape_interval: 1m
  scrape_timeout: 5s
  metrics_path: '/metrics'
  static_configs:
    - targets:
        - {{ loki_canary_port_bind_to }}
      labels:
        instance: '{{ ansible_facts.fqdn }}'
        host: '{{ ansible_facts.hostname }}'
        cluster: '{{ loki_canary_loki_domain }}'
        namespace: '{{ loki_canary_loki_domain }}'
        container_name: '{{ loki_canary_container_name }}'

{% if mailsender_disable_inbound_smtp25 %}
# Disable public SMTP listener (port 25) - not acting as MX server
#smtp      inet  n       -       y       -       -       smtpd
smtp       inet  n       -       y       -       -       smtpd
  -o inet_interfaces=127.0.0.1
{% else %}
smtp      inet  n       -       y       -       -       smtpd
{% endif %}

# Submission service with enforced TLS and AUTH (port 587)
submission inet n       -       y       -       -       smtpd
  -o syslog_name=postfix/submission
  -o smtpd_tls_security_level=encrypt
  -o smtpd_client_restrictions=permit_sasl_authenticated,reject
  -o smtpd_helo_required=yes
  -o smtpd_discard_ehlo_keywords=chunking
{% if mailsender_users | selectattr('allow_senders','defined') | list | length > 0 %}
  -o smtpd_sender_login_maps=hash:/etc/postfix/sender_login
  -o smtpd_sender_restrictions=reject_sender_login_mismatch
{% endif %}


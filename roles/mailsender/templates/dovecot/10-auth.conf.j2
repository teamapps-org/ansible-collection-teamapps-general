# Dovecot 10-auth.conf - Mailsender Role Configuration
# Generated by Ansible - do not edit manually
# Authentication configuration - AUTH only service for Postfix SASL

# Disable plaintext authentication (enforce TLS)
disable_plaintext_auth = yes

# Authentication mechanisms
auth_mechanisms = plain

# Include passwd-file authentication configuration
!include auth-passwdfile.conf.ext

# Log authentication attempts
auth_verbose = yes
auth_debug = no

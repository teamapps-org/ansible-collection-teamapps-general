# Master service configuration - AUTH service with Postfix UNIX socket

# Authentication service configuration
service auth {
  # UNIX socket for Postfix SASL authentication
  unix_listener /var/spool/postfix/private/auth {
    mode = 0660
    user = postfix
    group = postfix
  }

  # Process configuration
  user = root
  group = root
}

# Disable IMAP service (we only provide AUTH)
service imap-login {
  service_count = 0
}

# Disable POP3 service (we only provide AUTH)
service pop3-login {
  service_count = 0
}
